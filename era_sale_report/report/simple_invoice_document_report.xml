<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="simple_invoice_report_document_template">
            <t t-call="web.basic_layout">
                <style type="text/css">
                    font-family: 'calibri-regular';
                    src: url('/era_sale_report/static/src/fonts/calibri.ttf');
                    }
                    *, .calibri-regular {
                    font-family: calibri-regular !important;
                    }
                    .head p{
                    margin-bottom: 0;
                    }
                </style>
                <div class="page calibri-regular">
                    <div dir="ltr">
                        <div class="head" style="font-size:17px; border-bottom: 3px solid #000;">
                            <div class="row">
                                <div class="col-5">
                                    <div dir="ltr" style="text-align: left;">
                                        <div style="font-weight: 800; font-size:22px;">
                                            <span t-field="o.company_id.name"/>
                                        </div>
                                        <div>
                                            <p>
                                                <t t-esc="o.company_id.en_address"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="text-center" style="position: relative;">
                                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                                             style="max-width:130%; position: absolute; top: -24px; left: -25px; overflow: hidden;"
                                             alt="Logo"/>
                                    </div>
                                </div>
                                <div class="col-5" dir="rtl">
                                    <div dir="rtl" style="text-align: right;">
                                        <div style="font-weight: 800; font-size:22px;">
                                            <span t-field="o.company_id.ar_name"/>
                                        </div>
                                        <div>
                                            <p>
                                                <t t-esc="o.company_id.ar_address"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="order_details" style="font-size: 22px; padding-top: 2rem;">
                            <div class="title"
                                 t-att-style="'text-align:' + ('right' if o.partner_id.lang == 'ar_001' else 'left')">
                                <h1 style="margin-bottom: 0;">
                                    <span style="border-bottom: 2px solid #000; font-weight: bolder;">
                                        <t t-if="o.move_type == 'in_invoice'">
                                            <strong>فاتورة مشتريات </strong>
                                        </t>
                                        <t t-if="o.move_type == 'in_refund'">
                                            <strong>مرتجع مشتريات</strong>
                                        </t>
                                        <t t-if="o.move_type == 'out_invoice'">
                                            <strong>فاتورة ضريبية مبسطة</strong>
                                        </t>
                                        <t t-if="o.move_type == 'out_refund'">
                                            <strong>مرتجع مبيعات </strong>
                                        </t>
                                    </span>
                                </h1>
                                <div t-att-style="'font-size: 23px; direction:' + ('rtl; text-align: right;' if o.partner_id.lang == 'ar_001' else 'ltr; text-align: left;')">
                                    <span>
                                        <strong>Ref.: #</strong>
                                    </span>
                                    <span t-field="o.name"/>
                                </div>
                            </div>
                            <br/>
                            <table t-att-style="'width: 100%; direction:' + ('rtl; text-align: right;' if o.partner_id.lang == 'ar_001' else 'ltr; text-align:left;')">
                                <tbody>
                                    <tr>
                                        <td style="width: 60%; vertical-align: top;">
                                            <table style="width:100%;">
                                                <tbody>
                                                    <tr>
                                                        <td style="width:40%;">
                                                            <strong>اسم العميل - Customer Name :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:60%;">
                                                            <span style="font-size:20px;" t-field="o.partner_id.name"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:40%;">
                                                            <strong>رقم العميل - Customer Code :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:60%;">
                                                            <span t-if="o.partner_id.ref" style="font-size:20px;"
                                                                  t-field="o.partner_id.ref"/>
                                                            <span t-else="">n/a</span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:40%;">
                                                            <strong>رمز العميل الضريبي - Gust.VAT.No :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:60%;">
                                                            <span t-if="o.partner_id.vat" style="font-size:20px;"
                                                                  t-field="o.partner_id.vat"/>
                                                            <span t-else="">n/a</span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:40%;">
                                                            <strong>رقم امر البيع - Customer S.O :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:60%;">
                                                            <span t-if="o.invoice_origin" style="font-size:20px;"
                                                                  t-field="o.invoice_origin"/>
                                                            <span t-else="">n/a</span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:40%;">
                                                            <strong>تاريخ التسليم - Date Of Supply :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:60%;">
                                                            <span t-if="o.l10n_sa_delivery_date" style="font-size:20px;"
                                                                  t-field="o.l10n_sa_delivery_date"/>
                                                            <span t-else="">n/a</span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width: 40%;">
                                                            <strong>عنوان العميل - Customer Address :</strong>
                                                        </td>
                                                        <td style="width: 60%;">
                                                            <t t-if="o.partner_id">
                                                                <t t-if="o.partner_id.street">
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.street"/>
                                                                </t>
                                                                <t t-if="o.partner_id.street2">
                                                                    -
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.street2"/>
                                                                </t>
                                                                <t t-if="o.partner_id.city">
                                                                    -
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.city"/>
                                                                </t>
                                                                <t t-if="o.partner_id.state_id">
                                                                    -
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.state_id"/>
                                                                </t>
                                                                <t t-if="o.partner_id.zip">
                                                                    -
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.zip"/>
                                                                </t>
                                                                <t t-if="o.partner_id.country_id">
                                                                    -
                                                                    <span style="font-size:20px;"
                                                                          t-field="o.partner_id.country_id"/>
                                                                </t>
                                                            </t>
                                                            <t t-else="">n/a</t>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                        <td style="width: 40%; vertical-align: top;">
                                            <table>
                                                <tbody>

                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>تاريخ الفاتورة - Invoice Date :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.invoice_date"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>تاريخ الاستحقاق - Due Date :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.invoice_date_due"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>الفرع - Branch :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.branch_id.name"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>رمز المستودع - Site Code :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-if="o.inv_sale_id" t-esc="o.inv_sale_id.warehouse_id.code"/>
                                                            <span style="font-size:20px;" t-if="o.purchase_id" t-esc="o.purchase_id.picking_type_id.warehouse_id.code"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>اسم المندوب - Sales Name :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.salesperson.name"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>هاتف - Tell No. :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.partner_id.phone"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:50%;">
                                                            <strong>المشروع - Project :</strong>
                                                        </td>
                                                        <td class="text-center" style="width:50%;">
                                                            <span style="font-size:20px;" t-field="o.project_name"/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                        </div>

                        <div class="items"
                             t-att-style="'page-break-inside:avoid; direction:' + ('rtl; text-align: right;' if o.partner_id.lang == 'ar_001' else 'ltr; text-align: left;')">
                            <table class="table table-sm item_table" style="font-size:22px;">
                                <thead>
                                    <tr class="text-center">
                                        <th class="text-left"
                                            style="background-color: #ddd; vertical-align: middle; width: 4%;">
                                            <span>التسلسل</span><br/>
                                            <span>NO.</span>
                                        </th>
                                        <th class="text-center"
                                            style="width:15%; background-color: #ddd; vertical-align: middle;">
                                            <span>رقم الصنف</span><br/>
                                            <span>Model /N</span>
                                        </th>
                                        <th class="text-center"
                                            style="width:32%; background-color: #ddd; vertical-align: middle;">
                                            <span>اسم المنتج</span><br/>
                                            <span>Item Name</span>
                                        </th>
                                        <th style="background-color: #ddd; vertical-align: middle; width: 7%;">
                                            <span>الكمية</span><br/>
                                            <span>Qty</span>
                                        </th>
                                        <th style="background-color: #ddd; vertical-align: middle; width: 7%;">
                                            <span>السعر</span><br/>
                                            <span>Price</span>
                                        </th>
                                        <th style="background-color: #ddd; vertical-align: middle; width: 7%;">
                                            <span>الخصم</span><br/>
                                            <span>Disc</span>
                                        </th>
                                        <th style="background-color: #ddd; vertical-align: middle; width: 12%;">
                                            <span>السعر الصافي</span><br/>
                                            <span>Net Price</span>
                                        </th>
                                        <th style="background-color: #ddd; vertical-align: middle; width: 12%;">
                                            <span>مجموع الضريبة</span><br/>
                                            <span>Total Vat</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody style="font-size:18px;">
                                    <t t-set="subtotal_amount_before_discount" t-value="0"/>
                                    <t t-set="line_subtotal_before_discount" t-value="0"/>
                                    <t t-set="total_discount" t-value="0"/>
                                    <t t-set="sequence" t-value="1"/>
                                    <t t-foreach="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, -l.id), reverse=True)" t-as="line">
                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td style="border-top: 3px solid #540605 !important; padding: 0; width: 100%"
                                                    colspan="8">
                                                    <div class="text-center" style="font-weight: 700;">
                                                        <div style="display:inline-block; width:4%; text-align: left;">
                                                            <span t-esc="sequence"/>
                                                            <t t-set="sequence" t-value="sequence+1"/>
                                                        </div>
                                                        <div style="display:inline-block; width:15%">
                                                            <span t-field="line.product_id.default_code"/>
                                                        </div>
                                                        <div style="display:inline-block; width:31%">
                                                            <span t-field="line.product_id.name"/>
                                                        </div>
                                                        <div style="display:inline-block; width:8%">
                                                            <span t-field="line.quantity"/>
                                                        </div>
                                                        <div style="display:inline-block; width:8%">
                                                            <span t-field="line.price_unit"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                        </div>
                                                        <div style="display:inline-block; width:8%">
                                                            <t t-set="line_subtotal_before_discount" t-value="line.price_subtotal/(1-(line.discount/100))"/>
                                                            <t t-set="subtotal_amount_before_discount" t-value="line.price_subtotal/(1-(line.discount/100))+subtotal_amount_before_discount"/>
                                                            <t t-set="total_discount" t-value="(line_subtotal_before_discount- line.price_subtotal) + total_discount"/>
                                                            <span t-field="line.discount"/>%
                                                        </div>
                                                        <div style="display:inline-block; width:11%">
                                                            <span t-field="line.price_subtotal"
                                                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                                        </div>
                                                        <div style="display:inline-block; width:12%">
                                                            <t t-set="tax_amount" t-value="line.price_total-line.price_subtotal"/>
                                                            <span t-esc="'%.2f' % tax_amount"/>
                                                            <span t-field="o.currency_id.symbol"/>
                                                        </div>
                                                    </div>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td style="border-top: 3px solid #540605 !important; padding: 0; width: 100%" colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td style="border-top: 3px solid #540605 !important; padding: 0; width: 100%" colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div style="border: 1px solid #000; position: relative;">
                                <div style="font-size:18px; position: absolute; left: 44%; top: -22px; z-index: 999999; background: #fff; padding: 10px 17px; width: 160px; text-align: center;">
                                    <strong>
                                        <span style="width:100%"><![CDATA[<<]]> No Follows <![CDATA[>>]]></span>
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row" t-att-style="'page-break-inside:avoid; direction: ' + ('rtl;' if o.partner_id.lang == 'ar_001' else 'ltr;')">
                            <div class="col-4 text-center" style="font-size:20px; padding-top: 4rem;">
                                <div style="width: 9rem; margin: auto;">

                                    <img style="width:9.5rem; margin-top:5px;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', quote_plus(o.l10n_sa_qr_code_str), 200, 200)"/>
                                </div>
                            </div>
                            <div class="col-4"/>
                            <div class="col-4 total_table">
                                <table class="table table-sm" style="font-size:18px; width:100%; margin-bottom: 0;">
                                    <tbody>
                                        <tr>
                                            <td t-att-style="'font-weight: bold; border: none; text-align:' + ('right;' if o.partner_id.lang == 'ar_001' else 'left;')" colspan="2">G. Total - المجموع</td>
                                            <td colspan="2"
                                                t-att-style="'font-weight: bold; border: none; text-align:' + ('left;' if o.partner_id.lang == 'ar_001' else 'right;')">
                                                <span t-if="total_discount == 0" t-field="o.amount_untaxed"/>
                                                <span t-else="" t-esc="subtotal_amount_before_discount"
                                                      t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td t-att-style="'font-weight: bold; border: none; text-align:' + ('right;' if o.partner_id.lang == 'ar_001' else 'left;')" colspan="2">Discount - الخصم</td>
                                            <td colspan="2"
                                                t-att-style="'font-weight: bold; border: none; text-align:' + ('left;' if o.partner_id.lang == 'ar_001' else 'right;')">
                                                <t t-if="subtotal_amount_before_discount > 0" t-set="discount" t-value="(total_discount/subtotal_amount_before_discount) * 100"/>
                                                <span t-esc="'%.2f'% total_discount"/>
                                                <span t-field="o.currency_id.symbol"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td t-att-style="'font-weight: bold; border: none; text-align:' + ('right;' if o.partner_id.lang == 'ar_001' else 'left;')" colspan="2">Net Total - السعر الصافي</td>
                                            <td colspan="2"
                                                t-att-style="'font-weight: bold; border: none; text-align:' + ('left;' if o.partner_id.lang == 'ar_001' else 'right;')">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td t-att-style="'font-weight: bold; border: none; text-align:' + ('right;' if o.partner_id.lang == 'ar_001' else 'left;')"  colspan="2">VAT-الضريبة 15%</td>
                                            <td colspan="2"
                                                t-att-style="'font-weight: bold; border: none; text-align:' + ('left;' if o.partner_id.lang == 'ar_001' else 'right;')">
                                                <span t-field="o.amount_tax"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-sm" style="font-size:18px; with:100%">
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold; border: none; width: 10%;"/>
                                            <td style="font-weight: bold; border-top: 2px solid #000; width: 40%"/>
                                            <td style="font-weight: bold; border-top: 2px solid #000; width: 40%"/>
                                            <td style="font-weight: bold; border: none; width: 10%;"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold; border: none;" colspan="2">T. With VAT-الاجمالي النهائي:
                                            </td>
                                            <td colspan="2"
                                                t-att-style="'font-weight: bold; border: none; text-align:' + ('left;' if o.partner_id.lang == 'ar_001' else 'right;')">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Page 2 -->
                    <div style="page-break-before:always;" t-if="not o.company_id.hide_arabic">
                        <div class="head" style="font-size:17px; border-bottom: 3px solid #000;" dir="ltr">
                            <div class="row">
                                <div class="col-5" dir="ltr">
                                    <div dir="ltr" style="text-align: left;">
                                        <div style="font-weight: 800; font-size:22px;">
                                            <span t-field="o.company_id.name"/>
                                        </div>
                                        <div>
                                            <p>
                                                <t t-esc="o.company_id.en_address"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="text-center" style="position: relative;">
                                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                                             style="max-width:130%; position: absolute; top: -24px; left: -25px; overflow: hidden;"
                                             alt="Logo"/>
                                    </div>
                                </div>
                                <div class="col-5" dir="rtl">
                                    <div dir="rtl" style="text-align: right;">
                                        <div style="font-weight: 800; font-size:22px;">
                                            <span t-field="o.company_id.ar_name"/>
                                        </div>
                                        <div>
                                            <p>
                                                <t t-esc="o.company_id.ar_address"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <div class="text-center">
                            <h2><span t-field="o.company_id.invoice_ar_terms_title"/></h2>
                            <p style="font-size:20px;">
                                <span t-field="o.company_id.invoice_ar_terms_msg"/>
                            </p>
                        </div>
                        <div style="padding: 1rem 2rem; text-align: right;" dir="rtl">
                                <div t-if="o.company_id.invoice_ar_terms_section1" style="width: 49%; display: inline-block; vertical-align: top;">
                                    <span t-field="o.company_id.invoice_ar_terms_section1"/>
                                </div>
                                <div t-if="o.company_id.invoice_ar_terms_section2" style="width: 49%; display: inline-block; vertical-align: top;">
                                    <span t-field="o.company_id.invoice_ar_terms_section2"/>
                                </div>
                                <div t-if="o.company_id.invoice_ar_terms_section3" style="width: 49%; display: inline-block; vertical-align: top;">
                                    <span t-field="o.company_id.invoice_ar_terms_section3"/>
                                </div>
                                <div t-if="o.company_id.invoice_ar_terms_section4" style="width: 49%; display: inline-block; vertical-align: top;">
                                    <span t-field="o.company_id.invoice_ar_terms_section4"/>
                                </div>
                        </div>
                    </div>

                    <!-- Page 3 -->
                    <div style="page-break-before:always;" t-if="not o.company_id.hide_english">
                        <div class="head" style="font-size:17px; border-bottom: 3px solid #000;" dir="ltr">
                            <div class="row">
                                <div class="col-5">
                                    <div dir="ltr" style="text-align: left;">
                                        <div style="font-weight: 800; font-size:22px;">
                                            <span t-field="o.company_id.name"/>
                                        </div>
                                        <div>
                                            <p>
                                                <t t-esc="o.company_id.en_address"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="text-center" style="position: relative;">
                                       <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
