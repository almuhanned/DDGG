<odoo>
    <data>
        <record id="custom_account_payment_form_inherit_amount_word" model="ir.ui.view">
            <field name="name">custom.account.payment.form.inherit.amount.word</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_show_amount_in_word"/>
                    <field name="custom_amount_in_word"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>